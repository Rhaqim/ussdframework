{
	"menus": {
		"InitialScreen": {
			"text": "Welcome to the system",
			"type": "Initial",
			"default_next_screen": "MainScreen"
		},
		"MainScreen": {
			"text": "Main Menu",
			"type": "Menu",
			"default_next_screen": "DefaultNoneScreen",
			"menu_items": {
				"BalanceOption": {
					"option": "1",
					"display_name": "Balance Inquiry",
					"default_next_screen": "BalanceInquiryScreen"
				},
				"SendMoneyOption": {
					"option": "2",
					"display_name": "Send Money",
					"default_next_screen": "SendMoneyScreen"
				},
				"AirtimeOption": {
					"option": "3",
					"display_name": "Buy Airtime",
					"default_next_screen": "AirtimeScreen"
				}
			}
		},
		"DefaultNoneScreen": {
			"text": "Thank you for using the system",
			"type": "Quit",
			"default_next_screen": "MainScreen"
		},
		"BalanceInquiryScreen": {
			"text": "Select Account",
			"type": "Menu",
			"default_next_screen": "MainScreen",
			"menu_items": {
				"SavingsOption": {
					"option": "1",
					"display_name": "Savings",
					"default_next_screen": "MainScreen"
				},
				"CurrentOption": {
					"option": "2",
					"display_name": "Current",
					"default_next_screen": "MainScreen"
				}
			}
		},
		"SendMoneyScreen": {
			"text": "Select option",
			"type": "Menu",
			"default_next_screen": "MainScreen",
			"menu_items": {
				"OwnAccountOption": {
					"option": "1",
					"display_name": "Own Account",
					"default_next_screen": "MainScreen"
				},
				"OtherAccountOption": {
					"option": "2",
					"display_name": "Other Account",
					"default_next_screen": "MainScreen"
				}
			}
		},
		"AirtimeScreen": {
			"text": "Select option",
			"type": "Menu",
			"default_next_screen": "MainScreen",
			"menu_items": {
				"OwnNumberOption": {
					"option": "1",
					"display_name": "Own Number",
					"default_next_screen": "OwnNumberAmountScreen"
				},
				"OtherNumberOption": {
					"option": "2",
					"display_name": "Other Number",
					"default_next_screen": "OtherNumberAmountScreen"
				}
			}
		},
		"OwnNumberAmountScreen": {
			"text": "Enter amount",
			"type": "Input",
            "input_identifier": "amount",
			"default_next_screen": "OwnNumberFunctionScreen"
		},
        "OwnNumberFunctionScreen": {
            "text": "Processing...",
            "type": "Function",
            "function": "buy_airtime",
            "default_next_screen": "OwnNumberRouterScreen"
        },
        "OwnNumberRouterScreen": {
            "text": "Selecting...",
            "type": "Router",
            "router": "AirtimeScreen",
            "router_options": [
				{
					"router_option": "{{airtime.status == `success`}}",
					"next_screen": "SuccessScreen"
				},
				{
					"router_option": "{{airtime.status == `failed`}}",
					"next_screen": "OwnNumberAmountScreen"
				},
				{
					"router_option": "{{airtime.status == `error`}}",
					"next_screen": "OtherNumberAmountScreen"
				}
			],
            "default_next_screen": "DefaultNoneScreen"
        },
		"SuccessScreen": {
			"text": "Transaction Successful",
			"type": "Quit",
			"default_next_screen": "MainScreen"
		}
	},
	"services": {
		"buy_airtime": {
			"function_name": "buy_airtime",
			"functions_path": "services/buy_airtime.js",
			"function_url": "http://localhost:3000/buy_airtime",
			"data_key": "airtime"
		}
	}
}
